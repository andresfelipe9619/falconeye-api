{
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "rules": {
    "camelcase": "off",
    "semi": "off",
    "dot-notation": "off",
    "quotes": [2, "double"],
    "no-use-before-define": "warn",
    "spaced-comment": "warn"
  },
  "extends": ["standard"]
}
